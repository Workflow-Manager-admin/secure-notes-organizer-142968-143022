---
import ThemeToggle from '../components/ThemeToggle.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>

<style>
	:root {
		/* Black-and-white variables */
		--bg-color: #fff;
		--text-color: #111;
		--text-secondary: #444;
		--border-color: #bbb;
		--card-bg: #fff;
		--card-hover-bg: #efefef;
		--shadow-color: #bbb2;
		--shadow-hover-color: #bbb4;
	}

	body.dark-theme {
		/* Inverted for black/white */
		--bg-color: #111;
		--text-color: #fff;
		--text-secondary: #ccc;
		--border-color: #444;
		--card-bg: #1a1a1a;
		--card-hover-bg: #222;
		--shadow-color: #222b;
		--shadow-hover-color: #444b;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--bg-color);
		color: var(--text-color);
		transition: background-color 0.3s, color 0.3s;
	}
</style>
